check process celeryd with pidfile <%= node[:celery][:celeryd_pid_file] %>
  group "celery"
  start "/etc/init.d/celeryd start"
  stop "/etc/init.d/celeryd stop"
  <%- if node.recipes.include?('monit::pagerduty') -%>
  if 3 restarts within 5 cycles
  	then exec "/etc/monit/pagerduty-trigger celeryd"
  else if passed for 3 cycles
  	then exec "/etc/monit/pagerduty-resolve celeryd"
  <%- end -%>
  if 3 restarts within 5 cycles then timeout
